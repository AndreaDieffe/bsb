        "pf_length": 3000,
        "pf_radius": 0.5,
        "dendrite_length": 40
      },
      "plotting": {
        "display_name": "granule cell",
        "color": "#E62214"
      }
    },
    "glomerulus": {
      "placement": {
        "class": "scaffold.placement.LayeredRandomWalk",
        "layer": "granular_layer",
        "soma_radius": 1.5,
        "density": 3e-4
